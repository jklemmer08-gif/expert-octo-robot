# RunPod Video Processor Configuration

# Workspace paths (defaults for RunPod network volume)
WORKSPACE_DIR=/workspace
INPUT_DIR=/workspace/input
OUTPUT_DIR=/workspace/output
TEMP_DIR=/workspace/temp

# Encoding defaults
DEFAULT_CRF=18
DEFAULT_PRESET=slow
DEFAULT_CODEC=hevc_nvenc

# Upscaler defaults
DEFAULT_SCALE=4
DEFAULT_TILE_SIZE=512
DEFAULT_MODEL=RealESRGAN_x4plus
MODEL_DIR=/app/models
SEGMENT_SIZE=1000

# Processing limits
MAX_DURATION_MINUTES=180
MAX_FILE_SIZE_GB=50

# Web UI
WEB_PORT=8080
FLASK_ENV=production
